<nav aria-label="...">
    <ul class="pagination pagination-sm">
        {% for page in range(1, pagination.totalPages) %}
            {% if pagination.currentPage == page %}
            <li class="page-item active" aria-current="page">
                <span class="page-link">{{ page }}</span>
            </li>
            {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ path('core.homepage', {page: page}) }}">{{ page }}</a>
            </li>
            {% endif %}
        {% endfor %}
    </ul>
</nav>